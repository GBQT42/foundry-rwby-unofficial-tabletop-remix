{{#*inline "defense"}}
<div>
    <label class="resource-label rollable flexlarge align-left" data-roll-modifier="{{modifierFormula}}"
        data-label="{{name}} defence roll">
        {{name}}
    </label>
</div>
{{/inline}}


<section class="sheet-header">

    {{!-- Defense sidebar --}}
    <aside class="sidebar">
        <ol class="items-list effects-list">
            <li>
                <header class='item flexrow items-header'>DÃ©fenses</header>
            </li>
            <li>
                {{> defense name="Parry" modifierFormula="@abilities.per.rollableModifier +
                @abilities.for.rollableModifier"}}
            </li>
            <li>
                {{> defense name="Dodge" modifierFormula="@abilities.per.rollableModifier +
                @abilities.dex.rollableModifier"}}
            </li>
            <li>
                {{> defense name="Resist" modifierFormula="@abilities.per.rollableModifier +
                @abilities.cor.rollableModifier"}}
            </li>
            <li>
                {{> defense name="Semblance" modifierFormula="@abilities.per.rollableModifier +
                @abilities.esp.rollableModifier"}}
            </li>
            <li>
                {{> defense name="Dust" modifierFormula="@abilities.per.rollableModifier +
                @abilities.dis.rollableModifier"}}
            </li>
        </ol>

    </aside>
    <span style="margin:10px"></span>
    <div class="flexlarge">
        {{!-- Weapon features --}}
        <ol class='items-list'>
            <li class='item flexrow items-header'>
                <div class='item-name'>{{localize 'Combat Features'}}</div>
                <div class='item-controls'>
                    <a class='item-control item-create' title='Create item' data-type='combatFeature'>
                        <i class='fas fa-plus'></i>
                        {{localize 'DOCUMENT.New' type='feature'}}
                    </a>
                </div>
            </li>
            {{#each combatFeatures as |item id|}}
            <li class='item flexrow' data-item-id='{{item._id}}'>
                <div class='item-name'>
                    <div class='item-image'>
                        <a class='rollable' data-roll-modifier='{{item.system.rollModifier}}'
                            data-second-attribute="false" data-label="{{item.name}}">
                            <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
                        </a>
                    </div>
                    <h4 class="flexlarge">{{item.name}}</h4>
                    {{#if item.system.damageRoll}}
                    <div class='item-image'>
                        <a class='rollable' data-roll='{{item.system.damageRoll}}'
                            data-label="{{item.name}} damage roll">
                            <img src='systems\rwby-unofficial-tabletop-remix\assets\Icon_damage.webp' title='{{item.name}} damage roll' width='24' height='24' />
                        </a>
                    </div>
                    {{/if}}
                </div>
                <div class='item-controls'>
                    <a class='item-control item-edit' title='{{localize "DOCUMENT.Edit" type=' combatFeature'}}'>
                        <i class='fas fa-edit'></i>
                    </a>
                    <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' combatFeature'}}'>
                        <i class='fas fa-trash'></i>
                    </a>
                </div>
            </li>
            {{/each}}
        </ol>
    </div>
</section>