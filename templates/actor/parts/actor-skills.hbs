<ol class='grid-2col'>
  <li class='item flexrow items-header grid-span-2'>
    <div class='item-name flexlarge'>{{localize 'Skills'}}</div>
    <div class='item-controls' style="flex: 0.05 0 content;">
      <a class='item-control item-create' title='Create item' data-type='skill'>
        <i class='fas fa-plus'></i>
        {{localize "New skill"}}
      </a>
    </div>
  </li>
  {{#each skills as |item id|}}
  <li class='item flexrow' data-item-id='{{item._id}}'>
    <a class='rollable item-image' style="flex-grow: 0; flex-basis: auto;" data-roll-modifier="{{item.system.rollModifier}}" data-native-difficulty="{{item.system.nativeDifficulty}}"
      data-label="{{item.name}} skill check">
      <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
    </a>
    <h4 class="item-name flexlarge rollable" data-roll-type="item" style="white-space: nowrap"> {{item.name}}</h4>
    <div class='item-controls align-right'>
      <a class='item-control item-edit' title='{{localize "DOCUMENT.Edit" type=' skill'}}'>
        <i class='fas fa-edit'></i>
      </a>
      <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' skill'}}'>
        <i class='fas fa-trash'></i>
      </a>
    </div>
  </li>
  {{/each}}
</ol>