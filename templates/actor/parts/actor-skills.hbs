<ol class='grid-2col'>
  <li class='item flexrow items-header grid-span-2'>
    <div class='item-name'>{{localize 'Skills'}}</div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='Create item'
        data-type='skill'
      >
        <i class='fas fa-plus'></i>
        {{localize "New skill"}}
      </a>
    </div>
  </li>
  {{#each skills as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name flexrow'>
        <div class='item-image'>
            {{log item}}
          <a class='rollable' data-roll-modifier="{{item.system.rollModifier}}" data-label="{{item.name}} skill check">
            <img
              src='{{item.img}}'
              title='{{item.name}}'
              width='24'
              height='24'
            />
          </a>
        </div>
        <h4 class="align-center flexlarge">{{item.name}}</h4>
      </div>
      <div class='item-controls align-right'>
        <a
          class='item-control item-edit'
          title='{{localize "DOCUMENT.Edit" type='skill'}}'
        >
          <i class='fas fa-edit'></i>
        </a>
        <a
          class='item-control item-delete'
          title='{{localize "DOCUMENT.Delete" type='skill'}}'
        >
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
  {{/each}}
</ol>