<div class="resource flex-group-center">
    <div class="resource-content flexrow flex-center flex-between">
        <label for="roll.modifier.extra">Modifier:</label>
        <input type="text" name="roll.modifier.extra" id="roll.modifier.extra" value="0" data-dtype="Number" />
        {{#if secondAttribute}}
        <label for="roll.modifier.extra.attribute">Second attribute:</label>
        <select name="second.attribute" id="second.attribute">
            <option value="@abilities.for.value">FOR</option>
            <option value="@abilities.dex.value">DEX</option>
            <option value="@abilities.cor.value">COR</option>
            <option value="@abilities.per.value">PER</option>
            <option value="@abilities.esp.value">ESP</option>
            <option value="@abilities.dis.value">DIS</option>
            <option value="0">None</option>
        </select>
        {{/if}}
    </div>
</div>